<h2>Admin Section</h2>

<table>
  <tr>
    <th>Username</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.fullname %></td>
      <% if user == current_user %>
        <td></td>
      <% else %>
        <td><%= button_to 'Delete', admin_user_path(user.id), id: "delete-#{user.fullname}", method: :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>
